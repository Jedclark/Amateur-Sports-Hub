<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateSeasonActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/create_season_activity_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_season_activity_name_text"
            android:textSize="@dimen/heading_text_size"/>

        <EditText
            android:id="@+id/create_season_activity_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/create_season_activity_name_hint"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_season_activity_desc_text"
            android:textSize="@dimen/heading_text_size"/>

        <EditText
            android:id="@+id/create_season_activity_desc_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/create_season_activity_desc_hint"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_season_activity_participants_text"
            android:textSize="@dimen/heading_text_size"/>

        <EditText
            android:id="@+id/create_season_activity_participants_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/create_season_activity_participants_text"/>
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_season_activity_button_text"
            android:onClick="createSeason"/>

    </LinearLayout>

</LinearLayout>